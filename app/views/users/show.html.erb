<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div class="container">
        <span><%= link_to "following", following_user_path(@user) %></span>
        <span><%= link_to "followers", followers_user_path(@user) %></span>
        <span><%= link_to "preference", preference_user_path %></span>
        
        <%= @user.profile %>
        <br />
        <%= @user.area %>
        <br />
        <%= @user.group %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
