<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div class="container">
        <span><%= link_to "following", following_user_path(@user) %></span>
        <span><%= link_to "followers", followers_user_path(@user) %></span>
        <%= @user.profile %>
        <br />
        <%= @user.area %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>followers</h3>
    <% if @users.any? %>
    <div class="user_info">
      <% @users.each do |user| %>
      <div class="container">
         <%= link_to gravatar_for(user, size: 30), user %>
         <span><%= link_to user.name, user %></span>
         <hr>
       </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>